<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbxMain" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Elyas.view.ExpirementController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Number of Sensors    " />
            <TextField fx:id="txtSensorNumber" prefColumnCount="3" text="10" />
            <Label text="Increment By" />
            <TextField fx:id="txtSensorIncrement" prefColumnCount="3" text="-2" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Radius                        " />
            <TextField fx:id="txtRadius" prefColumnCount="3" text="0.1" />
            <Label text="Increment By" />
            <TextField fx:id="txtRadiusIncrement" prefColumnCount="3" text="0.1" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Coverage Range from" />
            <TextField fx:id="txtRangeFrom" disable="true" prefColumnCount="3" text="0" />
            <Label text="        To         " />
            <TextField fx:id="txtRangeTo" disable="true" prefColumnCount="3" text="1" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="X Axis                         " />
            <ComboBox fx:id="cmbXAxis" prefWidth="50.0" />
            <Label text="     Y Axis      " />
            <ComboBox fx:id="cmbYAxis" disable="true" prefWidth="125.0" promptText="Average Moves" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Number of Runs Per Value                               " />
            <TextField fx:id="txtRuns" prefColumnCount="3" text="20" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <Separator prefWidth="200.0" />
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Animation Speed                                              " />
            <TextField fx:id="txtAnimationSpeed" prefColumnCount="3" text="500" />
         </children>
      </HBox>
      <RadioButton mnemonicParsing="false" text="Move one sensor at a time." />
      <RadioButton mnemonicParsing="false" text="Move all sensors at the same time" />
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button fx:id="btnStart" defaultButton="true" mnemonicParsing="false" onAction="#btnStartAction" text="Start Expirement" />
        </buttons>
         <padding>
            <Insets right="10.0" />
         </padding>
      </ButtonBar>
      <TextArea fx:id="txtLog" editable="false" prefHeight="200.0" prefWidth="200.0" text="Application Started.">
         <VBox.margin>
            <Insets right="10.0" />
         </VBox.margin></TextArea>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
